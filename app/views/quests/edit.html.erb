<h1>Edit your Quest!</h1>
  <%= form_for @quest do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, value: "#{Date.today + 7}",
        min: Date.today + 7 %>
    </div>

    <div class="actions">
      <%= f.submit "Change it!", class: "tiny button radius" %>
    </div>
  <%- end -%>
