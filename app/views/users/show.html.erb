<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<div class="panel radius row" id="equip">
  <div class="small-4 columns panel radius text-center">
    <%= image_tag("avatar1") %>
  </div>
  <div class="small-8 columns panel radius" id="equipped">
    <h3 class="text-center"><strong>Equipped Items</strong></h2>
      <br />
    <p><strong>Head: </strong><%=  %></p>
    <p><strong>Neck: </strong><%=  %></p>
    <p><strong>Torso: </strong><%=  %></p>
    <p><strong>Left Hand: </strong><%=  %></p>
    <p><strong>Right Hand: </strong><%=  %></p>
    <p><strong>Waist: </strong><%=  %></p>
    <p><strong>Legs: </strong><%=  %></p>
    <p><strong>Feet: </strong><%=  %></p>
  </div>
  <div class="small-12 columns panel radius">
    <h3 class="text-center"><strong>Found Items</strong></h2>
    <% @finds.each do |find| %>
    <div class="find-panel radius">
      <% if find.item.rarity == "ordinary" %>
        <b id="ordinary"><%= find.item.name %></b>
      <% elsif find.item.rarity == "heirloom" %>
        <b id="heirloom"><%= find.item.name %></b>
      <% elsif find.item.rarity == "antiquity" %>
        <b id="antiquity"><%= find.item.name %></b>
      <% else %>
        <b id="relic"><%= find.item.name %></b>
      <% end %>
      <i class="right"><%= find.created_at.to_date %>,
        <%= find.created_at.strftime("%I:%M%p") %></i>
    </div>
    <% end %>
  </div>
</div>
<br />
<br />
