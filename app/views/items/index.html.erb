<h1>All the Items</h1>
<div id="key">
  <p class="left">Name</p>
  <p class="right">Rarity | Value</p>
</div><br /><br />
<% @items.each do |item| %>
  <div class="panel">
    <% if item.rarity == "junk" %>
      <p class="left" id="junk"><b><%= item.name %></p>
    <% elsif item.rarity == "heirloom" %>
      <p class="left" id="heirloom"><b><%= item.name %></p>
    <% elsif item.rarity == "antiquity" %>
      <p class="left" id="antiquity"><b><%= item.name %></p>
    <% else %>
      <p class="left" id="relic"><b><%= item.name %></p>
    <% end %>
    <p class="right"><%= item.rarity.capitalize %> | <%= item.value %></p><br />
  </div>
<% end %>
<%= paginate @items %><br />
